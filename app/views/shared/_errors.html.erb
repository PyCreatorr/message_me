<% if flash %>
    <% flash.each do |type, msg| %>
        <div>
            <!-- <div class="container">-->
                <div class="alert alert-<%= type%>  alert-dismissible fade show mb-0" role="alert">
                    <%= msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <!-- </div> -->
        </div>
    <% end %>
<% end %>